<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Tweet</th>
      <th>Sent On</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user.name %></td>
        <td><%= tweet.body %></td>
        <td><%= tweet.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h2>Add a tweet:</h2>
 <%= form_tag(:controller => 'tweets', :action=> 'post_tweet', :method => 'post') do %>
    <p>Tweet Message</br> <%= text_area_tag(:tweet_body)%></p> 
    <%= submit_tag("Tweet") %>
  <% end %>
<p id="notice"><%= notice %></p>  