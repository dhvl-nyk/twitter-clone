<p id="notice"><%= notice %></p>


<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Tweet</th>
      <th>Sent On</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user.name %></td>
        <td><%= tweet.body %></td>
        <td><%= tweet.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to("Follow", '/users/follow?user_id_to_follow='+@user_id_to_follow.to_s, :method=> :post)%>
